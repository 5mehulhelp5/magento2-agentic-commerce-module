<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magebit\AgenticCommerce\Api\ConfigInterface" type="Magebit\AgenticCommerce\Model\Config" />
    <preference for="Magebit\AgenticCommerce\Api\Data\FeedProductInterface" type="Magebit\AgenticCommerce\Model\Data\Feed\Product" />
    <preference for="Magebit\AgenticCommerce\Api\ProductMapperInterface" type="Magebit\AgenticCommerce\Model\Mapping\MapperComposite" />
    <preference for="Magebit\AgenticCommerce\Api\ProductFeedWriterInterface" type="Magebit\AgenticCommerce\Model\Export\Writer\CsvWriter" />
    <preference for="Magebit\AgenticCommerce\Model\Config\ProductFeedMapping\DataInterface" type="Magebit\AgenticCommerce\Model\Config\ProductFeedMapping\Data" />
    <preference for="Magebit\AgenticCommerce\Api\Data\IdempotencyInterface" type="Magebit\AgenticCommerce\Model\Idempotency\Model" />
    <preference for="Magebit\AgenticCommerce\Api\IdempotencyRepositoryInterface" type="Magebit\AgenticCommerce\Model\Idempotency\Repository" />
    <preference for="Magebit\AgenticCommerce\Api\CartValidatorInterface" type="Magebit\AgenticCommerce\Model\Validation\CartValidatorComposite" />

    <!-- Request Interfaces -->
    <preference for="Magebit\AgenticCommerce\Api\Data\Request\CreateCheckoutSessionRequestInterface" type="Magebit\AgenticCommerce\Model\Data\Request\CreateCheckoutSessionRequest" />
    <preference for="Magebit\AgenticCommerce\Api\Data\Request\UpdateCheckoutSessionRequestInterface" type="Magebit\AgenticCommerce\Model\Data\Request\UpdateCheckoutSessionRequest" />
    <preference for="Magebit\AgenticCommerce\Api\Data\Request\CompleteCheckoutSessionRequestInterface" type="Magebit\AgenticCommerce\Model\Data\Request\CompleteCheckoutSessionRequest" />

    <!-- Supporting Data Interfaces -->
    <preference for="Magebit\AgenticCommerce\Api\Data\AddressInterface" type="Magebit\AgenticCommerce\Model\Data\Address" />
    <preference for="Magebit\AgenticCommerce\Api\Data\BuyerInterface" type="Magebit\AgenticCommerce\Model\Data\Buyer" />
    <preference for="Magebit\AgenticCommerce\Api\Data\ItemInterface" type="Magebit\AgenticCommerce\Model\Data\Item" />
    <preference for="Magebit\AgenticCommerce\Api\Data\PaymentProviderInterface" type="Magebit\AgenticCommerce\Model\Data\PaymentProvider" />
    <preference for="Magebit\AgenticCommerce\Api\Data\LineItemInterface" type="Magebit\AgenticCommerce\Model\Data\LineItem" />
    <preference for="Magebit\AgenticCommerce\Api\Data\TotalInterface" type="Magebit\AgenticCommerce\Model\Data\Total" />
    <preference for="Magebit\AgenticCommerce\Api\Data\PaymentDataInterface" type="Magebit\AgenticCommerce\Model\Data\PaymentData" />
    <preference for="Magebit\AgenticCommerce\Api\Data\OrderInterface" type="Magebit\AgenticCommerce\Model\Data\Order" />
    <preference for="Magebit\AgenticCommerce\Api\Data\LinkInterface" type="Magebit\AgenticCommerce\Model\Data\Link" />
    <preference for="Magebit\AgenticCommerce\Api\Data\MessageInterface" type="Magebit\AgenticCommerce\Model\Data\Message" />

    <!-- Fulfillment Option Interfaces -->
    <preference for="Magebit\AgenticCommerce\Api\Data\FulfillmentOptionInterface" type="Magebit\AgenticCommerce\Model\Data\FulfillmentOption" />
    <preference for="Magebit\AgenticCommerce\Api\Data\FulfillmentOptionShippingInterface" type="Magebit\AgenticCommerce\Model\Data\FulfillmentOptionShipping" />
    <preference for="Magebit\AgenticCommerce\Api\Data\FulfillmentOptionDigitalInterface" type="Magebit\AgenticCommerce\Model\Data\FulfillmentOptionDigital" />

    <!-- Response Interfaces -->
    <preference for="Magebit\AgenticCommerce\Api\Data\Response\CheckoutSessionResponseInterface" type="Magebit\AgenticCommerce\Model\Data\Response\CheckoutSessionResponse" />
    <preference for="Magebit\AgenticCommerce\Api\Data\Response\CheckoutSessionWithOrderResponseInterface" type="Magebit\AgenticCommerce\Model\Data\Response\CheckoutSessionWithOrderResponse" />
    <preference for="Magebit\AgenticCommerce\Api\Data\Response\ErrorResponseInterface" type="Magebit\AgenticCommerce\Model\Data\Response\ErrorResponse" />

    <virtualType name="Magebit\AgenticCommerce\Model\Config\ProductFeedMapping\SchemaLocator" type="Magento\Framework\Config\GenericSchemaLocator">
        <arguments>
            <argument name="moduleName" xsi:type="string">Magebit_AgenticCommerce</argument>
            <argument name="schema" xsi:type="string">ac_product_feed_mapping_merged.xsd</argument>
            <argument name="perFileSchema" xsi:type="string">ac_product_feed_mapping.xsd</argument>
        </arguments>
    </virtualType>

    <virtualType name="ProductFeedMappingConfigReader" type="Magento\Framework\Config\Reader\Filesystem">
        <arguments>
            <argument name="converter" xsi:type="object">Magebit\AgenticCommerce\Model\Config\ProductFeedMapping\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">Magebit\AgenticCommerce\Model\Config\ProductFeedMapping\SchemaLocator</argument>
            <argument name="fileName" xsi:type="string">ac_product_feed_mapping.xml</argument>
            <argument name="idAttributes" xsi:type="array">
                <item name="/config/attributes" xsi:type="string">product_type</item>
                <item name="/config/attributes/mapping" xsi:type="string">id</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magebit\AgenticCommerce\Model\Config\ProductFeedMapping\Data">
        <arguments>
            <argument name="reader" xsi:type="object">ProductFeedMappingConfigReader</argument>
            <argument name="cacheId" xsi:type="string">ac_product_feed_mapping_cache</argument>
        </arguments>
    </type>

    <type name="Magebit\AgenticCommerce\Model\PaymentHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="stripe" xsi:type="object">Magebit\AgenticCommerce\Model\Payment\StripePaymentsHandler</item>
            </argument>
        </arguments>
    </type>

    <type name="Magebit\AgenticCommerce\Model\Validation\CartValidatorComposite">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="shipping_address" xsi:type="object">Magebit\AgenticCommerce\Model\Validation\ShippingAddressValidator</item>
                <item name="customer" xsi:type="object">Magebit\AgenticCommerce\Model\Validation\CustomerValidator</item>
            </argument>
        </arguments>
    </type>

    <type name="Magebit\AgenticCommerce\Model\Writer\CsvWriter">
        <arguments>
            <argument name="feedFilePath" xsi:type="string">export/agentic_commerce.csv</argument>
        </arguments>
    </type>

	<type name="Magento\Framework\Console\CommandList">
		<arguments>
			<argument name="commands" xsi:type="array">
				<item name="ExportFeed" xsi:type="object">Magebit\AgenticCommerce\Console\Command\ExportFeed</item>
			</argument>
		</arguments>
	</type>

    <type name="Magebit\AgenticCommerce\Model\Mapping\MapperComposite">
        <arguments>
            <argument name="productTypeMappers" xsi:type="array">
                <item name="simple" xsi:type="object">Magebit\AgenticCommerce\Model\Mapping\SimpleProductMapper</item>
                <item name="configurable" xsi:type="object">Magebit\AgenticCommerce\Model\Mapping\ConfigurableProductMapper</item>
            </argument>
        </arguments>
    </type>
</config>
