<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magebit_ac_idempotency" resource="default" engine="innodb" comment="Idempotency Table">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="key" nullable="false" length="255" comment="Idempotency Key"/>
        <column xsi:type="varchar" name="requestHash" nullable="false" length="255" comment="Request Hash"/>
        <column xsi:type="text" name="response" nullable="true" comment="Response Data"/>
        <column xsi:type="int" name="status" nullable="false" unsigned="true" default="0" comment="Status"/>
        <column xsi:type="datetime" name="expires_at" nullable="false" comment="Expires At"/>
        <column xsi:type="datetime" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="MAGEBIT_AC_IDEMPOTENCY_KEY">
            <column name="key"/>
        </constraint>
    </table>
</schema>
